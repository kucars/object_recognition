#include "ros/ros.h"
#include <perception_msgs/PoseEstimation.h>

bool add(perception_msgs::PoseEstimation::Request  &req,
         perception_msgs::PoseEstimation::Response &res)
{
  res.sum = req.a + req.b;
  ROS_INFO("request: x=%ld, y=%ld", (long int)req.a, (long int)req.b);
  ROS_INFO("sending back response: [%ld]", (long int)res.sum);
  return true;
}

int main(int argc, char **argv)
{
  ros::init(argc, argv, "recognition_pose_estimation_server");
  ros::NodeHandle n;

  ros::ServiceServer service = n.advertiseService("recognition_pose_estimation", add);
  ROS_INFO("Ready to add two ints.");
